<%= form_tag(tesda_course_sectors_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search TESDA Course Sectors" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @tesda_course_sectors.blank? %>
  <h4>There are no TESDA Course Sectors to display.</h4>
<% end %>

<p id="notice"><%= notice %></p>

<h1>TESDA Course Sectors</h1>

<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Sector name</th>
      <th>Sector description</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tesda_course_sectors.each do |tesda_course_sector| %>
      <tr>
        <td><%= tesda_course_sector.tcs_name %></td>
        <td><%= tesda_course_sector.tcs_desc %></td>
        <td><%= link_to tesda_course_sector, class: 'btn btn-primary btn-xs' do %>
              <i class="glyphicon glyphicon-eye-open"></i> Show
            <% end %>
        </td>
      <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_tesda_course_sector_path(tesda_course_sector) %></td>
        <td><%= link_to 'Destroy', tesda_course_sector, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
<%= link_to 'New TESDA Course Sector', new_tesda_course_sector_path %>
<% end %>
