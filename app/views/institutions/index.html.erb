<%= form_tag(institutions_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Institutions" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @institutions.blank? %>
  <h4>There are no institutions to display.</h4>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Institutions</h1>

<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Classification</th>
      <th>Province</th>
      <th>Municipality</th>
      <th>Street address</th>
      <th>Congressional district number</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.inst_class %></td>
        <td><%= institution.address_province %></td>
        <td><%= institution.address_municipality %></td>
        <td><%= institution.address_street_no %></td>
        <td><%= institution.cong_distr_num %></td>
        <td><%= link_to institution, class: 'btn btn-primary btn-xs' do %>
              <i class="glyphicon glyphicon-eye-open"></i> Show
            <% end %>
        </td>
      <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
        <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
<%= link_to 'New Institution', new_institution_path %>
<% end %>
