<p id="notice"><%= notice %></p>

<h2>Institution: <%= @institution.name %></h2>

<h3>Tuitions</h3>
<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Release date</th>
      <th>Acadyr termno</th>
      <th>Bacc</th>
      <th>Ms ma</th>
      <th>Phd</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tuitions.each do |tuition| %>
      <tr>
        <td><%= tuition.release_date %></td>
        <td><%= tuition.acadyr_termno %></td>
        <td><%= tuition.bacc %></td>
        <td><%= tuition.ms_ma %></td>
        <td><%= tuition.phd %></td>
        <td><%= link_to [@institution, tuition], class: 'btn btn-primary btn-xs' do %>
              <i class="glyphicon glyphicon-eye-open"></i> Show
            <% end %>
        </td>
      <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_institution_tuition_path(@institution, tuition) %></td>
        <td><%= link_to 'Destroy', [@institution, tuition], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if admin_signed_in? %>
<%= link_to 'New Tuition', new_institution_tuition_path %> |
<% end %>
<%= link_to @institution, class: 'btn btn-primary btn-xs' do %>
    <i class="glyphicon glyphicon-arrow-left"></i> Back
<% end %>