<p id="notice"><%= notice %></p>

<h2>Region: <%= @region.region_name %></h2>

<h3>Regional Data Records</h3>
<table class = "table-bordered table-striped stats-table">
  <thead>
    <tr>
      <th>Release date</th>
      <th>Academic year and term</th>
      <th>Cost per student</th>
      <th>Private nonsec</th>
      <th>Private sec</th>
      <th>Special HEIs</th>
      <th>Other government schools</th>
      <th>CHED-supervised institutions</th>
      <th>Local colleges and universities</th>
      <th>SUCs main</th>
      <th>SUCs sat</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @regional_data_records.each do |regional_data_record| %>
      <tr>
        <td><%= regional_data_record.release_date %></td>
        <td><%= regional_data_record.acadyr %></td>
        <td><%= regional_data_record.cost_per_stud %></td>
        <td><%= regional_data_record.private_nonsec %></td>
        <td><%= regional_data_record.private_sec %></td>
        <td><%= regional_data_record.special_HEI %></td>
        <td><%= regional_data_record.other_govt_schools %></td>
        <td><%= regional_data_record.ched_supervised_institution %></td>
        <td><%= regional_data_record.local_colleges_and_uni %></td>
        <td><%= regional_data_record.SUCs_main %></td>
        <td><%= regional_data_record.SUCs_sat %></td>
        <td><%= link_to [@region, regional_data_record], class: 'btn btn-primary btn-xs' do %>
              <i class="glyphicon glyphicon-eye-open"></i> Show
            <% end %>
        </td>
      <% if admin_signed_in? %>
        <td>
          <%= link_to edit_region_regional_data_record_path(@region, regional_data_record), class: 'btn btn-info btn-xs' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to [@region, regional_data_record], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
            <i class="glyphicon glyphicon-remove"></i> Destroy
          <% end %>  
        </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to @region, class: 'btn btn-primary btn-xs' do %>
  <i class="glyphicon glyphicon-arrow-left"></i> Back
<% end %>
<% if admin_signed_in? %>
  | 
  <%= link_to new_region_regional_data_record_path, class: 'btn btn-success btn-xs' do %>
    <i class="glyphicon glyphicon-plus"></i> New Regional Data Record
  <% end %>
<% end %>