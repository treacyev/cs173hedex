<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table class = "table-bordered table-striped stats-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Head count</th>
      <th>Year</th>
      <th>Grade level</th>
      <th>Institution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.head_count %></td>
        <td><%= section.year %></td>
        <td><%= section.grade_level %></td>
        <td><%= section.institution.name %></td>
        <td>
          <%= link_to section, class: 'btn btn-primary btn-xs' do %>
            <i class="glyphicon glyphicon-eye-open"></i> Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_section_path(section), class: 'btn btn-info btn-xs' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to section, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
            <i class="glyphicon glyphicon-remove"></i> Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_section_path, class: 'btn btn-success btn-xs' do %>
  <i class="glyphicon glyphicon-plus"></i> New Section
<% end %>