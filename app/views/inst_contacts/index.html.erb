<p id="notice"><%= notice %></p>

<h2>Institution: <%= @institution.name %></h2>

<h3>Contact numbers</h3>
<table class = "table-bordered table-striped stats-table">
  <thead>
    <tr>
      <th>Contact details</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @inst_contacts.each do |inst_contact| %>
      <tr>
        <td><%= inst_contact.contact_num %></td>
        <td>
          <%= link_to [@institution, inst_contact], class: "btn btn-primary btn-xs" do %>
            <i class="glyphicon glyphicon-eye-open"></i> Show
          <% end %>
        </td>
      <% if admin_signed_in? %>
        <td>
          <%= link_to edit_institution_inst_contact_path(@institution, inst_contact), class: "btn btn-info btn-xs" do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to [@institution, inst_contact], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %>
            <i class="glyphicon glyphicon-remove"></i> Destroy
          <% end %>  
        </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to @institution, class: "btn btn-primary btn-xs" do %>
  <i class="glyphicon glyphicon-arrow-left"></i> Back
<% end %>
<% if admin_signed_in? %>
  | 
  <%= link_to new_institution_inst_contact_path, class: "btn btn-success btn-xs" do %>
    <i class="glyphicon glyphicon-plus"></i> New Institution Contact
  <% end %>
<% end %>