<p id="notice"><%= notice %></p>

<h2>Institution: <%= @institution.name %></h2>
<h3> Data Records</h3>

<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Release date</th>
      <th>Academic year and term</th>
      <th>Student count</th>
      <th>Number enrolled</th>
      <th>Number graduated</th>
      <th>Cost per student</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @data_records.each do |data_record| %>
      <tr>
        <td><%= data_record.release_date %></td>
        <td><%= data_record.acadyr_termno %></td>
        <td><%= data_record.stud_count %></td>
        <td><%= data_record.enrolled %></td>
        <td><%= data_record.graduated %></td>
        <td><%= data_record.cost_per_stud %></td>
        <td><%= link_to [@institution, data_record], class: 'btn btn-primary btn-xs' do %>
              <i class="glyphicon glyphicon-eye-open"></i> Show
            <% end %>
        </td>
      <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_institution_data_record_path(@institution, data_record) %></td>
        <td><%= link_to 'Destroy', [@institution, data_record], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if admin_signed_in? %>
<%= link_to 'New Data Record', new_institution_data_record_path %> |
<% end %>
<%= link_to @institution, class: 'btn btn-primary btn-xs' do %>
    <i class="glyphicon glyphicon-arrow-left"></i> Back
<% end %>