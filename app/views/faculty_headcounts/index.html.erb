<p id="notice"><%= notice %></p>

<h2>Institution: <%= @institution.name %></h2>

<h3>Faculty Headcounts</h3>
<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Release date</th>
      <th>Academic year and term</th>
      <th>Bacc</th>
      <th>MS MAs</th>
      <th>PhDs</th>
      <th>Maintainer</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @faculty_headcounts.each do |faculty_headcount| %>
      <tr>
        <td><%= faculty_headcount.release_date %></td>
        <td><%= faculty_headcount.acadyr_termno %></td>
        <td><%= faculty_headcount.bacc %></td>
        <td><%= faculty_headcount.ms_ma %></td>
        <td><%= faculty_headcount.phd %></td>
        <td><%= faculty_headcount.maintainer %></td>
        <td><%= link_to [@institution, faculty_headcount], class: 'btn btn-primary btn-xs' do %>
              <i class="glyphicon glyphicon-eye-open"></i> Show
            <% end %>
        </td>
      <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_institution_faculty_headcount_path(@institution, faculty_headcount) %></td>
        <td><%= link_to 'Destroy', [@institution, faculty_headcount], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if admin_signed_in? %>
<%= link_to 'New Faculty Headcount', new_institution_faculty_headcount_path %> |
<% end %>
<%= link_to @institution, class: 'btn btn-primary btn-xs' do %>
    <i class="glyphicon glyphicon-arrow-left"></i> Back
<% end %>