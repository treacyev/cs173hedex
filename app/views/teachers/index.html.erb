<%= form_tag(teachers_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Teachers" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @teachers.blank? %>
  <h4>There are no Teachers to display.</h4>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.t_fname %></td>
        <td><%= teacher.t_mname %></td>
        <td><%= teacher.t_lname %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path %>
