<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<%= form_tag(teachers_path, :method => "get", id: "search-form") do %>
  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="field form-group form-inline">
      <div class="col-sm-4">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Teachers" %>
        <%= button_tag(type: "submit", class: "btn btn-default btn-md", :name => nil) do%>
          <i class="glyphicon glyphicon-search"></i> Search
        <% end %>
      </div>
    </div>
    <div class="col-sm-4">
    </div>
  </div>
<% end %>

<% if @teachers.blank? %>
  <br />
  <div class="alert alert-info">
    There are no Teachers to display.
  </div>
<% end %>

<table class = "table-bordered table-striped stats-table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.t_lname %></td>
        <td><%= teacher.t_fname %></td>
        <td><%= teacher.t_mname %></td>
        <td><%= teacher.t_lname %></td>
        <td>
          <%= link_to teacher, class: "btn btn-primary btn-xs" do %>
            <i class="glyphicon glyphicon-eye-open"></i> Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_teacher_path(teacher), class: "btn btn-info btn-xs" do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %>
            <i class="glyphicon glyphicon-remove"></i> Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_teacher_path, class: "btn btn-success btn-xs" do %>
  <i class="glyphicon glyphicon-plus"></i> New Teacher
<% end %>