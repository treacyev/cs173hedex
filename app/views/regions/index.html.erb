<p id="notice"><%= notice %></p>

<h1>Regions</h1>

<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Region name</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.region_name %></td>
        <td><%= link_to region, class: 'btn btn-primary btn-xs' do %>
              <i class="glyphicon glyphicon-eye-open"></i> Show
            <% end %>
        </td>
      <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_region_path(region) %></td>
        <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
<%= link_to 'New Region', new_region_path %>
<% end %>
